{
  "name": "@pyj/finnesse",
  "version": "3.1.0",
  "description": "Professional resume generation and management system with dynamic templating and schema validation",
  "author": "Jeremiah Pegues <jeremiah@pegues.io>",
  "license": "MIT",
  "private": "false",
  "repository": {
    "type": "git",
    "url": "https://github.com/jeremiahpegues/finnessume.git"
  },
  "keywords": [
    "resume",
    "cv",
    "generator",
    "parser",
    "schema",
    "template"
  ],
  "main": "src/js/render.js",
  "types": "types/index.d.ts",
  "files": [
    "src/js",
    "src/css",
    "src/schemas",
    "types",
    "public"
  ],
  "scripts": {
    "start": "serve public/",
    "validate": "node src/js/utils/validators.js",
    "test": "jest --config jest.config.js --coverage",
    "build": "npm run build-css && npm run build-js",
    "build-css": "sass src/styles/main.scss:src/css/styles.css --no-source-map",
    "watch-css": "sass --watch src/styles/main.scss:src/css/styles.css",
    "lint": "eslint src/js/",
    "format": "prettier --write .",
    "prepare": "husky install",
    "prepublishOnly": "npm run build && npm test",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags",
    "release": "npm run build && npm test && npm version",
    "publish-npm": "npm publish --access public",
    "build-js": "webpack --mode production",
    "watch-js": "webpack --mode development --watch",
    "test:unit": "jest --config jest.config.js",
    "test:integration": "jest --config jest.integration.js",
    "validate:schema": "node src/js/utils/validate-schema.js",
    "finesse": "ts-node src/server/index.ts",
    "test:watch": "jest --config jest.config.js --watch",
    "finesse-resume": "ts-node src/cli/finesse-resume.ts",
    "process-job": "ts-node src/cli/process-job.ts"
  },
  "dependencies": {
    "bootstrap": "^5.3.2",
    "bootstrap-datepicker": "^1.10.0",
    "commander": "^11.1.0",
    "express": "^4.18.2",
    "html2pdf.js": "^0.10.1",
    "jquery": "^3.6.0",
    "openai": "^3.2.1",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/supertest": "^6.0.2",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "dotenv": "^16.4.7",
    "eslint": "^8.56.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-module-name-mapper": "^0.1.5",
    "prettier": "^3.1.1",
    "sass": "^1.69.5",
    "supertest": "^6.3.4",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
