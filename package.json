{
  "name": "@pyj/finnesse",
  "version": "3.1.0",
  "description": "Professional resume generation and management system with dynamic templating and schema validation",
  "author": "Jeremiah Pegues <jeremiah@pegues.io>",
  "license": "MIT",
  "private": "false",
  "repository": {
    "type": "git",
    "url": "https://github.com/jeremiahpegues/finnessume.git"
  },
  "keywords": [
    "resume",
    "cv",
    "generator",
    "parser",
    "schema",
    "template"
  ],
  "main": "src/js/render.js",
  "types": "types/index.d.ts",
  "files": [
    "src/js",
    "src/css",
    "src/schemas",
    "types",
    "public"
  ],
  "scripts": {
    "start": "serve public/",
    "validate": "node src/js/utils/validators.js",
    "test": "npm run validate",
    "build": "npm run build-css && npm run build-js",
    "build-css": "sass src/styles/main.scss src/css/styles.css",
    "watch-css": "sass --watch src/styles/main.scss:src/css/styles.css",
    "lint": "eslint src/js/",
    "format": "prettier --write .",
    "prepare": "husky install",
    "prepublishOnly": "npm run build && npm test",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags",
    "release": "npm run build && npm test && npm version",
    "publish-npm": "npm publish --access public"
  },
  "dependencies": {
    "bootstrap": "^5.3.2",
    "html2pdf.js": "^0.10.1",
    "jquery": "^3.6.0"
  },
  "devDependencies": {
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "eslint": "^8.56.0",
    "husky": "^8.0.3",
    "prettier": "^3.1.1",
    "sass": "^1.69.5"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
